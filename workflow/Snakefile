# Main entrypoint of the workflow.
# Please follow the best practices:
# https://snakemake.readthedocs.io/en/stable/snakefiles/best_practices.html,
# in particular regarding the standardized folder structure mentioned there.

from snakemake.utils import min_version

min_version("6.3.0")


configfile: "config/config.yaml"


pepfile: config["pepfile"]


include: "rules/common.smk"
include: "rules/trimming.smk"
include: "rules/qc.smk"
include: "rules/host_filtering.smk"
include: "rules/assembly.smk"
include: "rules/metabat2.smk"
include: "rules/metabinner.smk"
include: "rules/metacoag.smk"
include: "rules/rosella.smk"
include: "rules/vamb.smk"
include: "rules/das_tool.smk"


rule all:
    input:
        expand(
            "results/{project}/qc/multiqc.html",
            project=get_project(),
        ),
        expand(
            "results/{project}/filtered/{kraken_ref}/{sample}_{kraken_ref}_1.fastq.gz",
            project=get_project(),
            sample=get_samples(),
            kraken_ref=get_kraken_ref(),
        ),
        expand(
            "results/{project}/filtered/{sample}_summary.csv",
            project=get_project(),
            sample=get_samples(),
        ),
        expand(
            "results/{project}/assembly/{sample}_summary.csv",
            project=get_project(),
            sample=get_samples(),
        ),
        expand(
            "results/{project}/das_tool/{sample}/{sample}_DASTool_summary.tsv",
            project=get_project(),
            sample=get_samples(),
        ),


# "results/{project}/das_tool/{sample}/binner_control.csv",
